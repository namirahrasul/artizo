<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs', { title: 'Notifications' , stylesheet: '/css/notif.css' }) %>

  <body>
    <%- include('navbar.ejs', { user: user }) %>
      <div class="notifcontainer">
        <div class="notifnav ">
          <ul>
            <li><a href="#" class="notiflogo notifa">
                <% if (profile.profile_img){ %>
                  <img src="/uploads/<%=profile.profile_img%>" alt="Profile">
                  <% } else { %>
                    <img src="/images/default.jpg" alt="Profile">
                    <% } %>
                      <span class="notifnav-item">DashBoard</span>
              </a>
            </li>
            <li>
              <a href="/profile" class="notifa">
                <i class="fas fa-bell"></i>
                <span class="notifnav-item">Profile</span>
              </a>
            </li>
          
            <li>
              <a href="/notification" class="notifa">
                <i class="fas fa-bell"></i>
                <span class="notifnav-item">Notifications</span>
              </a>
            </li>
            <li><a href="/MyGigs" class="notifa notifa-active">
                <i class="fas fa-thumbs-up"></i>
                <span class="notifnav-item">My Gigs</span>
              </a></li>
            <li><a href="/FollowedGigs" class="notifa">
                <i class="fas fa-thumbs-up"></i>
                <span class="notifnav-item">Followed Gigs</span>
              </a></li>
          
            <li><a href="/client-offers" class="notifa">
                <i class="fas fa-user"></i>
                <span class="notifnav-item">Offered Gigs</span>
              </a></li>
          
            <li><a href="/running-gigs" class="notifa">
                <i class="fas fa-user"></i>
                <span class="notifnav-item">Running Gigs</span>
              </a></li>
          
            <li><a href="/HiredGigs" class="notifa">
                <i class="fas fa-user"></i>
                <span class="notifnav-item">Hired Gigs</span>
              </a></li>
            <% if(user.is_admin) { %>
              <li><a href="/unapproved-gigs" class="notifa">
                  <i class="fas fa-users"></i>
                  <span class="notifnav-item">Approve Gigs</span>
                </a></li>
              <li><a href="/reported-gigs" class="notifa">
                  <i class="fas fa-users"></i>
                  <span class="notifnav-item">Reported Gigs</span>
                </a></li>
              <li><a href="/delete-requests" class="notifa">
                  <i class="fas fa-users"></i>
                  <span class="notifnav-item">Delete Requests</span>
                </a></li>
              <li><a href="/edit-requests" class="notifa">
                  <i class="fas fa-users"></i>
                  <span class="notifnav-item">Edit Requests</span>
                </a></li>
              <li><a href="/users" class="notifa">
                  <i class="fas fa-users"></i>
                  <span class="notifnav-item">Users</span>
                </a></li>
              <li><a href="/register-admin" class="notifa">
                  <i class="fas fa-users"></i>
                  <span class="notifnav-item">Add Admin</span>
                </a></li>
              <% } %>
          </ul>
        </div>

        <div class="main-skills">

          <div class="profile-card">

            <span class="data-title"><b class="boldName"><u></u>My Gigs</b></span>
            <% if(gigs.length==0) { %>
              <p>No gigs created</p>
              <% } else {%>

                <% for (let i=0; i < gigs.length; i +=3) { %>
                  <div class="row mb-3 g-5">
                    <% for (let j=i; j < i + 3 && j < gigs.length; j++) { %>

                      <div class="col-8 mb-lg-5 mr ">
                        <div class="campaign-card card">
                          <div class="card-body d-flex flex-column justify-content-between">
                            <div class="campaign-info">
                              <div class="card-img-container">
                                <img src="/uploads/<%= gigs[j].gig_img %>" alt="campaign image" class="img-fluid mb-2">
                              </div>
                              <h5 class="card-title fs-sm-3">
                                <%= gigs[j].title %>
                              </h5>
                              <br>
                            </div>
                            <div class="card-actions d-flex">

                              <div class="row">

                              <a href="/browse-gigs/<%= gigs[j].id %>" class="btn btn-dark mb-2 mt-2">Learn
                                More</a>
                                </div>
                                
                                <div class="stats">
                                  <div class="row">

                                    <div class="col-5 text-center fs-sm-5">
                                    <i class="fas fa-star" style="padding-right: 0.2rem"></i>
                                    <span style="padding-right: 0.8rem">
                                      <%= gigs[j].rating %>/5
                                    </span>
                                    </div>
                                    <div class="col-7">
                                    <i class="fas fa-money-bill" style="padding-right: 0.2rem"></i>
                                    <span style="padding-right: 0.8rem">Tk <%= gigs[j].hourly_rate %>/hr</span>
                                   </div>
                                  </div>
                                  <div class="row text-center fs-sm-5">
                                    <div class="col-6">
                                    <i class="fas fa-users" style="padding-right: 0.2rem"></i>
                                    <span style="padding-right: 0.8rem">
                                      <%= gigs[j].no_customers %> customers
                                    </span>
                                    </div>
                                    <div class="col-6">
                                    <i class="fas fa-thumbs-up" style="padding-right: 0.2rem"></i>
                                    <span style="padding-right: 0.8rem">
                                      <%= gigs[j].no_followers %> followers
                                    </span>

                                  </div>
                                  </div>
                                  <div class="row my-3">
                                  <div class="col-6">
                                    <a href="/edit-gig-form/<%=gigs[j].id %>" class="btn btn-warning"><i
                                      class="fas fa-pencil-alt"></i></a>
                                    </div>
                                    <div class="col-6">
                                  <button class=" btn btn-danger text-white " style="text-decoration: none; color:white">
                                    <a href="/delete-gig-form/<%=gigs[j].id %>"><i class="fas fa-trash-alt"
                                        style="text-decoration: none; color:white"></i></a></button>
                                    </div>
                                  </div>
                                </div>
                                </div>

                            </div>
                          </div>
                        </div>
                        <% } %>
                      </div>

                      <% } %>
                      <% } %>
                  </div>
                  
                   
          </div>

        </div>



      
      <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
  </body>

</html>