<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs', { title: 'Delete Requests' , stylesheet: '/css/edit_request_kiran2.css' }) %>

  <body>
    <%- include('navbar.ejs', { user: user }) %>
      <div class="notifcontainer">
        <div class="notifnav ">
          <ul>
            <li><a href="#" class="notiflogo notifa">
                <% if (profile.profile_img){ %>
                  <img src="/uploads/<%=profile.profile_img%>" alt="Profile">
                  <% } else { %>
                    <img src="/images/default.jpg" alt="Profile">
                    <% } %>
                      <span class="notifnav-item">DashBoard</span>
              </a>
            </li>
            <li>
              <a href="/profile" class="notifa">
                <i class="fas fa-id-card"></i>
                <span class="notifnav-item">Profile</span>
              </a>
            </li>

            <li>
              <a href="/notification" class="notifa">
                <i class="fas fa-bell"></i>
                <span class="notifnav-item">Notifications</span>
              </a>
            </li>
            <li><a href="/MyGigs" class="notifa">
                <i class="fas fa-briefcase"></i>
                <span class="notifnav-item">My Gigs</span>
              </a></li>
            <li><a href="/FollowedGigs" class="notifa">
                <i class="fas fa-heart"></i>
                <span class="notifnav-item">Followed Gigs</span>
              </a></li>

            <li><a href="/client-offers" class="notifa ">
                <i class="fas fa-handshake"></i>
                <span class="notifnav-item">Offered Gigs</span>
              </a></li>

            <li><a href="/running-gigs" class="notifa">
                <i class="fas fa-running"></i>
                <span class="notifnav-item">Running Gigs</span>
              </a></li>

            <li><a href="/HiredGigs" class="notifa">
                <i class="fas fa-check-circle"></i>
                <span class="notifnav-item">Hired Gigs</span>
              </a></li>
            <% if(user.is_admin==true) { %>
              <li><a href="/unapproved-gigs" class="notifa">
                  <i class="fas fa-check-square"></i>
                  <span class="notifnav-item">Approve Gigs</span>
                </a></li>
              <li><a href="/reported-gigs" class="notifa">
                  <i class="fas fa-exclamation-triangle"></i>
                  <span class="notifnav-item">Reported Gigs</span>
                </a></li>
              <li><a href="/delete-requests" class="notifa notifa-active">
                  <i class="fas fa-trash-alt"></i>
                  <span class="notifnav-item">Delete Requests</span>
                </a></li>
              <li><a href="/edit-requests" class="notifa">
                  <i class="fas fa-pencil-alt"></i>
                  <span class="notifnav-item">Edit Requests</span>
                </a></li>
              <li><a href="/users" class="notifa">
                  <i class="fas fa-users-cog"></i>
                  <span class="notifnav-item">Users</span>
                </a></li>
              <li><a href="/register-admin" class="notifa">
                  <i class="fas fa-user-plus"></i>
                  <span class="notifnav-item">Add Admin</span>
                </a></li>
              <% } %>
          </ul>
        </div>


        <div class="main-skills">

          <div class="profile-card">

            <span class="data-title"><b class="boldName leftAlignFollowedGigs"><u></u>Delete Requests</b></span>
            <br>
            <div class="row justify-content-between ">
              <div class="col-4">
                <h4 class="boldforName ">Gig</h4>
              </div>
              <div class="col-3">
                <h4 class="boldforName">Requested By</h4>
              </div>
              <div class="col-2 ">
                <h4 class="boldforName">View Request</h4>
              </div>

              <div class="col-1 ">
                <h4 class="boldforName ">Approve</h4>
              </div>
              <div class="col-1 ">
                <h4 class="boldforName ">Decline</h4>
              </div>
            </div>
            <hr>
            <% if(request.length==0) { %>

              <p>No requests yet</p>
              <% } else {%>

                <% for (let i=0; i < request.length; i++) { %>
                  <div class="row justify-content-between">
                    <div class="col-4 ">

                      <!-- <button class="btn btn-dark" style="margin-left:1px; margin-right:5px"> -->

                      <a class="hoverName" href="/browse-gigs/<%= request[i].gig_id%>">
                        <%= request[i].gig_title%>
                      </a>

                      <!-- </button> -->
                    </div>
                    <div class="col-3">
                      <a class="hoverName" href="/profile/<%=request[i].email%>">
                        <%=request[i].name%>
                      </a>
                    </div>

                    <div class="col-2 ">
                      <a class="beautiful-link " href='/delete-request/<%=request[i].did%>'>
                        View Request
                      </a>
                    </div>

                    <div class="col-1">
                      <form class="" action="admin/approve-delete/<%=request[i].gig_id%>" method="post">
                        <button type="submit" class="btn btn-dark report-btn approve">Approve</button>
                      </form>
                    </div>
                    <div class="col-1 ">
                      <form class="" action="admin/decline-delete/<%=request[i].gig_id%>" method="post">
                        <button type="submit" class="btn btn-dark report-btn decline">Decline</button>
                      </form>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <hr>
                    </div>
                  </div>
                  <% } %>
                    <% } %>
          </div>

        </div>

      </div>
      </div>
      </section>
      </section>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
  </body>

</html>