<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs', { title: 'Notifications' , stylesheet: '/css/notif.css' }) %>

 <body>
  <%- include('navbar.ejs', { user: user }) %>
   <div class="notifcontainer">
    <div class="notifnav">
     <ul>
      <li><a href="#" class="notiflogo notifa">
        <img src="/uploads/<%=user.profile_img%>" alt="">
        <span class="notifnav-item">DashBoard</span>
       </a>
      </li>

      <li><a href="/MyCampaigns" class="notifa">
        <i class="fas fa-user"></i>
        <span class="notifnav-item prof">Profile</span>
       </a></li>

      <li><a href="/notification" class="notifa">
        <i class="fas fa-bell"></i>
        <span class="notifnav-item">Notification</span>
       </a></li>
      <li><a href="/FollowedCampaigns" class="notifa">
        <i class="fas fa-thumbs-up"></i>
        <span class="notifnav-item">Followed Campaigns</span>
       </a></li>
      <li><a href="/DonatedCampaigns" class="notifa">
        <i class="fas fa-user"></i>
        <span class="notifnav-item">Backed Campaigns</span>
       </a></li>
     </ul>
    </div>





    <div class="main-skills">

     <div class="profile-card">
      <a class="btn btn-dark" href="/edit-profile">Edit Profile</a>
      <div class="row">
       <h4 class="col-3">Name: </h4>
       <p class="col-9">
        <%=user.name%>
       </p>
      </div>
      <div class="row">
       <h4 class="col-3">Email: </h4>
       <p class="col-9">
        <%=user.email%>
       </p>
      </div>
      <div class="row">
       <h4 class="col-3">Bio: </h4>
       <p class="col-9">
        <%=user.bio_description%>
       </p>
      </div>
      <div class="row">
       <h4 class="col-3">Institute Name: </h4>
       <p class="col-9">
        <%=user.institute_name%>
       </p>
      </div>
      <div class="row">
       <h4 class="col-3">Institute Country: </h4>
       <p class="col-9">
        <%=user.institute_country%>
       </p>
      </div>
      <div class="row">
       <h4 class="col-3">Field of study: </h4>
       <p class="col-9">
        <%=user.study_field%>
       </p>
      </div>
      <div class="row">
       <h4 class="col-3">Graduation Year: </h4>
       <p class="col-9">
        <%=user.graduation_year%>
       </p>
      </div>
      <% if (user.institute_certificate) { %>
       <div class="row">
        <h3><a href="/uploads/<%= user.institute_certificate %>" target="_blank">Institutional
          Certificate</a></h3>
       </div>
       <% } else { %>
        <h3 class="row">No institutional certificates added</h3>

        <% } %>
         <div class="row">
          <h4 class="col-3">Work Description: </h4>
          <p class="col-9">
           <%=user.work_description%>
          </p>
         </div>

         <div class="row">
          <h4 class="col-3">Occupation: </h4>
          <p class="col-9">
           <%=user.occupation%>
          </p>
         </div>
         <div class="row">
          <h4 class="col-3">Years of Experience: </h4>
          <p class="col-9">
           <%=user.years_of_experience%>
          </p>
         </div>
         <% if (user.resume) { %>
          <div class="row align-items-center">
           <h3><a href="/uploads/<%= user.resume %>" target="_blank">Resume</a></h3>
          </div>
          <% } else { %>
           <h3 class="row">No resumes added</h3>

           <% } %>
            <div class="row">
             <h4 class="col-3">Facebook URL: </h4>
             <p class="col-9">
              <%=user.fb_url%>
             </p>
            </div>
            <div class="row">
             <h4 class="col-3">Twitter URL: </h4>
             <p class="col-9">
              <%=user.twitter_url%>
             </p>
            </div>
            <div class="row">
             <h4 class="col-3">Youtube URL: </h4>
             <p class="col-9">
              <%=user.yt_url%>
             </p>
            </div>
            <div class="row">
             <h4 class="col-3">Website URL: </h4>
             <p class="col-9">
              <%=user.website_url%>
             </p>
            </div>
     </div>

    </div>



   </div>
   <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

   <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
 </body>

</html>